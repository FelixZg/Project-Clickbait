<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - clickbait</title>
    <link rel="stylesheet" href="~/css/site.css?id=1234" asp-append-version="true" runat="Server" />
</head>
<body>
    <header>
        <nav class="nav">
            <a asp-controller="Home" asp-action="Index" style="color:orangered">clickbait</a>
        </nav>
        <div class="menuButtons">
            <a id="modalLoginBtn" class="btn btn-secondary">Sign in</a>
            <a id="modalRegisterBtn" class="btn btn-primary">REGISTER</a>
        </div>
    </header>

    <div id="simpleModal" class="modal">
        <div class="modal-content">
            <div id="container" class="container">
                <div class="form-container sign-up-container">
                    <form asp-controller="Home" method="post">
                        <h1 class="white-background">Create account</h1>
                        <div class="social-container">
                            <a href="" class="social"><i class="fab fa-facebook-f"></i></a>
                            <a href="" class="social"><i class="fab fa-google-plus-g"></i></a>
                            <a href="" class="social"><i class="fab fa-linkedin-in"></i></a>
                        </div>
                        <span>or use your email for registration</span>
                        <input  type="text" placeholder="Name">
                        <input  type="email" placeholder="Email">
                        <input  type="password" placeholder="Password">
                        <button type="submit" class="btn btn-form">sign up</button>
                    </form>
                </div>
                <div class="form-container sign-in-container">
                    <form asp-controller="Home" method="post">
                        <h1 class="white-background">Sign in</h1>
                        <div class="social-container">
                            <a href="" class="social"><i class="fab fa-facebook-f"></i></a>
                            <a href="" class="social"><i class="fab fa-google-plus-g"></i></a>
                            <a href="" class="social"><i class="fab fa-linkedin-in"></i></a>
                        </div>
                        <span>or use your email for registration</span>
                        <input type="text" placeholder="Username">
                        <input type="password" placeholder="Password">
                        <a class="link" href="#">Forgot your password?</a>
                        <button type="submit" class="btn btn-form">sign in</button>
                    </form>
                </div>
                <div class="overlay-container">
                    <div class="overlay">
                        <div class="overlay-panel overlay-left">
                            <h1>Welcome back!</h1>
                            <p>To keep connected with us please login with your personal information</p>
                            <button class="btn btn-form-ghost" id="signIn">Sign In</button>
                        </div>
                        <div class="overlay-panel overlay-right">
                            <h1>Hello friend!</h1>
                            <p>Enter your personal details and start your journey with us</p>
                            <button class="btn btn-form-ghost" id="signUp">Sign Up</button>
                        </div>
                    </div>
                </div>
            </div>
            <span id="closeBtn">&times;</span>
            <p>Lorem ipsum dolor sit amet.</p>
        </div>
    </div>
    @RenderBody()
    <footer class="footer">
        <h2>Subscribe</h2>
        <h3>Subscribe to word<span>book.</span> to join our mailing list and receive updates</h3>
        <input type="text" class="emailSearch" placeholder="Enter email" />
        <div class="email">
            <a href="" class="btn-enter"><i class="fas fa-sign-in-alt"></i></a>
        </div>
        <ul>
            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a id="modalLoginBtn" href="#">Sign in</a></li>
            <li><a id="modalRegisterBtn" href="#">Register</a></li>
        </ul>
        <h5>
            IMPORANT: All contents are provided by non-affilliated third parties.
        </h5>
    </footer>

    <script src="~/js/site.js" asp-append-version="true" runat="Server"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
